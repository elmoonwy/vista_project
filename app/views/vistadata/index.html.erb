<%#= raw @barcode_for_html.to_html %>

<center><h1>SwissVault DATA Federation Service</h1></center><br><br>
<form action=<%= root_path %> data-remote="true">
  <div class="row">
    <div class="large-9 columns">
        <strong class="hide-for-small-only">First Name</strong>
        <input type="text" name="firstName" placeholder="First Name" />
      </label> 
    </div>
    <div class="large-9 columns">
      <strong class="hide-for-small-only">Last Name</strong>
        <input type="text" name="lastName" placeholder="Last Name" />
      </label>
    </div>    
    <div class="large-9 columns">
      <div class="row collapse">
      <strong class="hide-for-small-only">Date of Birth  (MM/DD/YYYY)</strong>
        <div class="small-2 columns">
          <select name="monthOfBirth">
            <% (1..12).each do |m| %>
              <option value=<%= m.to_s %>><%= m %></option>
            <% end %>
          </select>
        </div>
        <div class="small-2 columns">
          <select name="dayOfBirth">
            <% (1..31).each do |m| %>
              <option value=<%= m.to_s %>><%= m %></option>
            <% end %>
          </select>
        </div>
        <!-- <div class="small-1 columns">
          <span class="postfix">/</span>
        </div> -->
        <div class="small-4 columns end">
          <select name="yearOfBirth">
            <% (1940..2015).each do |m| %>
              <option value=<%= m.to_s %>><%= m %></option>
            <% end %>
          </select>
        </div>
    </div>
    </div>
    <div class="large-9 columns">
      <strong>Choose Your Gender</strong>
      <input type="radio" name="sex" value="male" id="sexMale"><label for="sexMale"><strong>Male</strong></label>
      <input type="radio" name="sex" value="female" id="sexFemale"><label for="sexFemale"><strong>Female</strong></label>
    </div>
    <div class="large-12 columns">
      <input type="submit" value="Submit" class="button" name="submitQueryForVista">
    </div>
  </div>
</form>

<div class="row">
  <div class="large-12 columns" id="resultOfQuery">
    <table cellpadding="0" cellspacing="0" border="0" class="display large-12 columns" id="example"></table>
  </div>
</div>

